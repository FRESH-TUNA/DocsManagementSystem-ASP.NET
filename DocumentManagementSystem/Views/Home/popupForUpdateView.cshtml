@model DocumentManagementSystem.DAL.Views.DocumentView

<div class="modal fade" id="editModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">UpdateDocument</h4>
            </div>

            @using (Html.BeginForm("updateDocument", "Home", FormMethod.Post))
            {
            <div class="modal-body">
                <input type="text" class="form-control" name="documentId" value="@Model.documentId" style="display:none">
                <div class="form-group">
                    <label for="Category">Category:</label>
                    <input type="text" class="form-control" name="categoryName" value="@Model.categoryName">
                </div>
                <div class="form-group">
                    <label for="Contents">Contents:</label>
                    <input type="text" class="form-control" id="content" name="content" value="@Model.content">
                </div>
                <div class="form-group">
                    <label for="URL">URL:</label>
                    <input type="text" class="form-control" id="url" name="url" value="@Model.url">
                </div>
            </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-default"  value="submit">
                </div>
            }
        </div>
    </div>
</div>

